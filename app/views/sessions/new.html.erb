<div class='container'>
  <div class="row">
    <div class="col-md-4">
      <%= form_for @user, url: sessions_create_path do |f| %>
        <%= f.label 'email' %>
        <%= f.text_field :email, class: "form-control" %>
        <%= f.label 'password' %>
        <%= f.text_field :password, class: "form-control" %><br />
        <%= f.submit "Log In"%>
      <% end %>
    </div>
  </div>
</div>
